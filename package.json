{
    "name": "ntw-conventer",
    "version": "2.0.2",
    "description": "Convert numbers to words in multiple languages, with special support for Azerbaijani, English, and Turkish",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts",
        "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
        "lint": "eslint src/**/*.ts",
        "test": "jest",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "number-to-word",
        "azerbaijani",
        "azeri",
        "number-converter",
        "number-to-text",
        "text-converter",
        "multilingual"
    ],
    "author": "Farda Karimov",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/latreon/number-to-word"
    },
    "bugs": {
        "url": "https://github.com/latreon/number-to-word/issues"
    },
    "homepage": "https://github.com/latreon/number-to-word#readme",
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "eslint": "^8.38.0",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "tsup": "^6.7.0",
        "typescript": "^5.0.4"
    }
}